{% extends 'master' %}
{% set headTitle = 'Galéria' %}

{% block content %}

<form class="form-horizontal" method="post" data-toggle="validator">

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Galéria neve *</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" name="name" id="name" placeholder="Galéria neve" value="{{ gallery.name }}"
             required maxlength="254">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="date_from" class="col-lg-2 control-label">Kezdő dátum</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" name="date_from" id="date_from" placeholder="pl. 2016.11.20. 12:15:00"
             value="{{ gallery.date_from | date() }}" data-datetime="y" data-delay="1500">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="date_to" class="col-lg-2 control-label">Befejező dátum</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" name="date_to" id="date_to" placeholder="pl. 2016.11.20. 12:15:00"
             value="{{ gallery.date_to | date() }}" data-datetime="y" data-delay="1500">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <label for="keywords" class="col-lg-2 control-label">Kulcsszavak</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" name="keywords" id="keywords" data-gallery="{{ gallery.id }}"
             placeholder="szó1,szó2,satöbbi" value="{{ keywordNames | join(',') if keywordNames }}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-2 control-label">Láthatóság</label>
    <div class="col-lg-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" name="public" id="public" {{ 'checked' if gallery.public }}>
          Publikus
        </label>
      </div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="about" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="5" name="about" id="about" placeholder="Pár szó, ha van mit mesélni" maxlength="1024">{{ gallery.about }}</textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Alaphelyzet</button>
      <button type="submit" class="btn btn-primary">Mentés</button>
    </div>
  </div>

  {{ csrfField }}

</form>

{% endblock %}

{% block styles %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.4/css/selectize.min.css" />
{% endblock %}

{% block scripts %}
<!-- Bootstrap Validator -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
<!-- Moment.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js"></script>
<!-- Selectize -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.4/js/standalone/selectize.min.js"></script>
<!-- Enhanced keyword field -->
<script src="/scripts/smart-keywords.js"></script>
<!-- Custom validators -->
<script src="/scripts/custom-validators.js"></script>
{% endblock %}