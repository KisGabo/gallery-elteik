{% extends 'master' %}
{% set headTitle = "Bejelentkezés" %}

{% block content %}

<h1>Bejelentkezés</h1>

<form class="form-horizontal" method="post" data-toggle="validator">

  <div class="form-group has-feedback">
    <label for="email" class="col-lg-2 control-label">E-mail</label>
    <div class="col-lg-10">
      <input type="email" class="form-control" name="email" id="email" placeholder="E-mail cím" value="{{ fd.email }}" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="password" class="col-lg-2 control-label">Jelszó</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" name="password" id="password" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Alaphelyzet</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>

  {{ csrfField }}

</form>

{% endblock %}

{% block scripts %}
<!-- Bootstrap Validator -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}