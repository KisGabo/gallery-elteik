{% extends 'master' %}
{% set headTitle = "Regisztráció" %}

{% block content %}

<h1>Regisztráció</h1>

<form class="form-horizontal" method="post" data-toggle="validator">

  <div class="form-group has-feedback">
    <label for="username" class="col-lg-2 control-label">Felhasználói név *</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" name="username" id="username" placeholder="Felhasználói név" value="{{ fd.username }}"
             required data-minlength="2" maxlength="80" pattern="[a-zA-Z0-9]*" data-remote="{{ 'a_user_exists' | route() }}"
             data-pattern-error="Csak az angol ábécé betűit és számokat tartalmazhat." data-minlength-error="Minimum 2 karakter hosszú legyen."
             data-remote-error="A felhasználói név már létezik. Kérlek, válassz másikat.">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="email" class="col-lg-2 control-label">E-mail *</label>
    <div class="col-lg-10">
      <input type="email" class="form-control" name="email" id="email" placeholder="E-mail cím" value="{{ fd.email }}"
             required maxlength="254" data-remote="{{ 'a_user_exists' | route() }}"
             data-remote-error="Az e-mail cím már foglalt. Kérlek, válassz másikat.">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="password" class="col-lg-2 control-label">Jelszó *</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" name="password" id="password"
             required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="password_confirm" class="col-lg-2 control-label">Jelszó újra *</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" name="password_confirm" id="password_confirm"
             required data-match="#password" data-match-error="A két jelszó nem egyezik.">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="intro" class="col-lg-2 control-label">Bemutatkozás</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="5" name="intro" id="intro" placeholder="Pár szó magadról, ha gondolod" maxlength="1024">{{ fd.intro }}</textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Alaphelyzet</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>

  {{ csrfField }}

</form>

{% endblock %}

{% block scripts %}
<!-- Bootstrap Validator -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}